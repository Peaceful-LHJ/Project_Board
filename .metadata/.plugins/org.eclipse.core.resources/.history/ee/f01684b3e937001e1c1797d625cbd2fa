<mapper namespace="com.project.repository.board.NoticeBoardDelRepository">
	
	<insert id="noticeBoardDelInsert">
    	insert into NOTIboard_DEL (delNOTIbno, NOTIbno, title, content, writer, regDate, updateDate)
		select seq_board_DEL.nextval, bno, title, content, writer, regDate, updateDate
		from board where NOTIbno = #{NOTIbno}
    </insert>
    
    <select id="noticeBoardDelRead" resultType="NoticeBoardDelVO">
    	select * from board_DEL where NOTIbno = #{NOTIbno}
    </select>
    
</mapper>