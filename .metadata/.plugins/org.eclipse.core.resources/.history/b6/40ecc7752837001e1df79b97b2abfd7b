package com.project.repository.comment;

import com.project.domain.comment.CommentVO;

public interface CommentRepository {
	
	CommentVO boardCommentInsert(CommentVO vo); // 자유게시글 댓글 작성
	
	CommentVO questionBoardCommentInsert(CommentVO vo); // 질문게시글 댓글 작성
	
	
	CommentVO boardCommentRead(Long bno); // 자유게시판 댓글 조회
	
	CommentVO questionBoardCommentRead(Long QUESbno); // 질문게시판 댓글 조회
	
	
	Long commentDelete(Long rno); // 댓글 삭제
	
	
	Long commentModify(CommentVO vo); // 댓글 수정
	
	
	Long getCommentCountForBoard(Long bno); // 자유게시글 댓글 수
	
	Long getCommentCountForQUESboard(Long QUESbno); // 질문게시글 댓글 수
	
}
