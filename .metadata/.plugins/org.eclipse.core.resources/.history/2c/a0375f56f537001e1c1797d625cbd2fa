<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.repository.board.AnswerRepository">

	<insert id="answerInsert">
		insert into answer (answerNum, QUESbno, content, writer)
		values (seq_answer.nextval, #{QUESbno}, #{content}, #{writer})
	</insert>
	
	<select id="answerRead" resultType="AnswerVO">
		select * from answer where answerNum = #{answerNum}
	</select>
	
	<select id="answerListRead" resultType="AnswerVO">
		select * from answer where QUESbno = #{QUESbno}
	</select>
	
	<update id="answerUpdate">
		update answer set
			content = #{content}, 
			updateDate = sysdate
		where answerNum = #{answerNum}
	</update>
	
	<delete id="answerDelete">
		delete from answer where answerNum = #{answerNum}
	</delete>
	
	<delete id="commentListFromBoardDelete">
		delete from tbl_comment where bno = #{bno}
	</delete>
	
	<delete id="commentListFromQuestionBoardDelete">
		delete from tbl_comment where QUESbno = #{QUESbno}
	</delete>
	
	

	
	
	<select id="getCommentCountForBoard" resultType="Long">
		select count(commentNum) from tbl_comment where bno = #{bno}
	</select>
	
	<select id="getCommentCountForQUESboard" resultType="Long">
		select count(commentNum) from tbl_comment where QUESbno = #{QUESbno}
	</select>
	
</mapper>