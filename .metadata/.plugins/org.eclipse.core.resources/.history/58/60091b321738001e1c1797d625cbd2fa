<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.repository.report.QuestionBoardReportRepository">
	
	<insert id="questionBoardReportInsert">
		insert into QUESboardRPT (boardRPTnum, bno, title, content, writer)
		values (seq_boardRPT.nextval, #{bno}, #{title}, #{content}, #{writer})
	</insert>
	
	<select id="questionBoardReportRead" resultType="BoardReportVO">
		select * from boardRPT where boardRPTnum = #{boardRPTnum}
	</select>
	
	<delete id="questionBoardReportDelete">
		delete from boardRPT where boardRPTnum = #{boardRPTnum}
	</delete>
	
</mapper>