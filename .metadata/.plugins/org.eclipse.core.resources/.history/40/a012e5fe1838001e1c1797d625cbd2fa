<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.repository.report.CommentReportRepository">
	
	<insert id="commentReportInsert">
		insert into boardRPT (commentRPTnum, commentNum, title, content, writer)
		values (seq_boardRPT.nextval, #{commentNum}, #{title}, #{content}, #{writer})
	</insert>
	
	<select id="commentReportRead" resultType="CommentReportVO">
		select * from boardRPT where boardRPTnum = #{boardRPTnum}
	</select>
	
	<delete id="commentReportDelete">
		delete from boardRPT where boardRPTnum = #{boardRPTnum}
	</delete>
	
</mapper>