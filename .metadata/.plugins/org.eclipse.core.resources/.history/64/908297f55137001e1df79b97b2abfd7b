<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.repository.board.QuestionBoardRepository">
	
	<insert id="questionBoardInsert">
    	insert into board(bno, title, content, writer)
    	values (seq_board.nextval, #{title}, #{content}, #{writer})
    </insert>
    
    <insert id="questionBoardInsertSelectKey" keyColumn="bno" keyProperty="bno" useGeneratedKeys="true">
  	    insert into board(bno, title, content, writer)
    	values (seq_board.nextval, #{title}, #{content}, #{writer})
    </insert>
    
	<select id="questionBoardRead" resultType="BoardVO">
    	select * from board where bno = #{bno}
    </select>
    
    <delete id="questionBoardDelete">
    	delete from board where bno = #{bno}
    </delete>
    
	<update id="questionBoardUpdate">
    	update board set
    	title = #{title},
    	content = #{content},
    	writer = #{writer},
    	updateDate = sysdate
    	where bno = #{bno}
    </update>
    
	<update id="questionBoardUpdateCommentCnt">
    	update board set commentCnt = commentCnt + #{amount} where bno = #{bno}
    </update>
    
	<update id="questionBoardUpdateLikeCnt">
		update board set boardLikeCnt = boardLikeCnt + #{amount} where bno = #{bno}
	</update>
	
</mapper>